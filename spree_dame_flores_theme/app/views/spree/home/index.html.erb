<section class="filtros">
	<%= form_tag '/search', :method => :post, class: "navbar-form" do |f| %>
		<%= render partial: 'spree/shared/filters',  :locals => {:f => f} %>
		<%= submit_tag("Buscar", class: '[ boton ]') %>
	<% end %>
</section>

<% if @products %>
	<section class="[ featured-products ]">
		<% @products.each do |product| %>
			<%= render 'product', :product => product %>
		<% end %>
	</section>
<% end %>
