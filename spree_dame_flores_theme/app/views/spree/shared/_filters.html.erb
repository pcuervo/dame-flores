<% if @occasion_types %>
	<%= label_tag "occasion", "Tipo de ocasión" %>
	<%= collection_select( :occasion, :id, @occasion_types, :id, :name, { :prompt => 'Selecciona la ocasión'} ) %>
<% end %>

<% if @product_types %>
	<%= label_tag "product", "Producto" %>
	<%= collection_select( :product, :id, @product_types, :id, :name, { :prompt => 'Selecciona el producto'} ) %>
<% end %>

<% if @flower_types %>
	<%= label_tag "flower", "Tipo de flor" %>
	<%= collection_select( :flower, :id, @flower_types, :id, :name, { :prompt => 'Selecciona tipo de flor'} ) %>
<% end %>

<%= label_tag "price", "Rango de precio" %>
<%= text_field_tag "start_price", nil, placeholder: "Precio inicial" %>
<%= text_field_tag "end_price", nil, placeholder: "Precio final" %>
